@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-cloud-plus"></i> &nbsp; Create new Product
            </a>
        </div>
    </div>
    <br /><br />
    <table id="table_id" class=" display table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Price
                </th>
                <th>Author</th>
                <th>Category</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="50%">
                    @obj.Title
                </td>
                <td width="30%">
                    @obj.ISBN
                </td>
                <td width="30%">
                    @obj.Price
                </td>
                <td width="30%">
                    @obj.Author
                </td>
                <td width="30%">
                    @obj.Category.name
                    

                </td>
               <td>
            <div class="w-75 btn-group" role="group">
                <a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id">
                    <i class="bi bi-pencil-square"></i>
                    Edit
                </a>
            </div>
        </td>
        <td>
            <div class="w-75 btn-group" role="group">
                <a class="btn btn-danger mx-1" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id">
                    <i class="bi bi-trash-fill"></i>
                    Delete
                </a>
            </div>
            </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{

    <script src="~/js/product.js"></script>
}
